<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDCBCB"
    android:orientation="vertical"
    android:weightSum="9"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/text_exp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|end"
        android:paddingRight="20dp"
        android:text=""
        android:textColor="@color/purple_500"
        />

    <TextView
        android:id="@+id/text_number"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center|end"
        android:maxLength="14"
        android:paddingRight="20dp"
        android:text="0"

        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="@color/purple_500"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="6">

            <Button
                android:id="@+id/percent_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="%"
                android:textColor="@color/white"
                android:background="@color/Grey"
                android:textSize="25sp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:onClick="onButtonClicked"
                />

            <Button
                android:id="@+id/inverse_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="@string/_1_x"
                android:textColor="@color/white"
                android:background="@color/Grey"
                android:textSize="25sp"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:onClick="onButtonClicked"
                />

            <Button
                android:id="@+id/btn7_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="7"
                android:textColor="@color/white"
                android:background="@color/Pink"
                android:textSize="25sp"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:onClick="onButtonClicked"
                />

            <Button
                android:id="@+id/btn4_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="4"
                android:textColor="@color/white"
                android:background="@color/Pink"
                android:textSize="25sp"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:onClick="onButtonClicked"
                />
            <Button
                android:id="@+id/btn1_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="1"
                android:textColor="@color/white"
                android:background="@color/Pink"
                android:textSize="25sp"
                android:layout_column="0"
                android:layout_row="4"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:onClick="onButtonClicked"
                />

            <Button
                android:id="@+id/sign_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="+/-"
                android:textColor="@color/white"
                android:background="@color/Pink"
                android:textSize="25sp"
                android:layout_column="0"
                android:layout_row="5"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:onClick="onButtonClicked"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="6">

            <Button
                android:id="@+id/CE_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="CE"
                android:textColor="@color/white"
                android:background="@color/Grey"
                android:textSize="25sp"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:onClick="onButtonClicked"
                />

            <Button
                android:id="@+id/carre_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="xÂ²"
                android:textColor="@color/white"
                android:background="@color/Pink"
                android:textSize="25sp"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:onClick="onButtonClicked"
                />

            <Button
                android:id="@+id/btn8_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="8"
                android:textColor="@color/white"
                android:background="@color/Pink"
                android:textSize="25sp"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:onClick="onButtonClicked"
                />

            <Button
                android:id="@+id/btn5_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="5"
                android:textColor="@color/white"
                android:background="@color/Pink"
                android:textSize="25sp"
                android:layout_column="1"
                android:layout_row="3"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:onClick="onButtonClicked"
                />

            <Button
                android:id="@+id/btn2_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="2"
                android:textColor="@color/white"
                android:background="@color/Pink"
                android:textSize="25sp"
                android:layout_column="1"
                android:layout_row="4"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:onClick="onButtonClicked"
                />

            <Button
                android:id="@+id/btn0_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="0"
                android:textColor="@color/white"
                android:background="@color/Pink"
                android:textSize="25sp"
                android:layout_column="1"
                android:layout_row="5"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:onClick="onButtonClicked"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="6">

            <Button
                android:id="@+id/clear_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="C"
                android:textColor="@color/white"
                android:background="@color/Grey"
                android:textSize="25sp"
                android:layout_column="2"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:onClick="onButtonClicked"
                />

            <Button
                android:id="@+id/square_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="sqr"
                android:textColor="@color/white"
                android:background="@color/Pink"
                android:textSize="25sp"
                android:layout_column="2"
                android:layout_row="1"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:onClick="onButtonClicked"
                />

            <Button
                android:id="@+id/btn9_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="9"
                android:textColor="@color/white"
                android:background="@color/Pink"
                android:textSize="25sp"
                android:layout_column="2"
                android:layout_row="2"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:onClick="onButtonClicked"
                />

            <Button
                android:id="@+id/btn6_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="6"
                android:textColor="@color/white"
                android:background="@color/Pink"
                android:textSize="25sp"
                android:layout_column="2"
                android:layout_row="3"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:onClick="onButtonClicked"
                />

            <Button
                android:id="@+id/btn3_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="3"
                android:textColor="@color/white"
                android:background="@color/Pink"
                android:textSize="25sp"
                android:layout_column="2"
                android:layout_row="4"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:onClick="onButtonClicked"
                />
            <Button
                android:id="@+id/virgule_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="."
                android:textColor="@color/white"
                android:background="@color/Pink"
                android:textSize="25sp"
                android:layout_column="2"
                android:layout_row="5"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:onClick="onButtonClicked"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="6">

            <Button
                android:id="@+id/delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="Delete"
                android:textColor="@color/white"
                android:background="@color/Grey"
                android:textSize="25sp"
                android:layout_column="3"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:onClick="onButtonClicked"
                />

            <Button
                android:id="@+id/division_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="/"
                android:textColor="@color/white"
                android:background="@color/Pink"
                android:textSize="25sp"
                android:layout_column="3"
                android:layout_row="1"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:onClick="onButtonClicked"
                />

            <Button
                android:id="@+id/multi_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="*"
                android:textColor="@color/white"
                android:background="@color/Pink"
                android:textSize="25sp"
                android:layout_column="3"
                android:layout_row="2"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:onClick="onButtonClicked"
                />

            <Button
                android:id="@+id/minus_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="-"
                android:textColor="@color/white"
                android:background="@color/Pink"
                android:textSize="25sp"
                android:layout_column="3"
                android:layout_row="3"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:onClick="onButtonClicked"
                />

            <Button
                android:id="@+id/ADDITION_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="+"
                android:textColor="@color/white"
                android:background="@color/Pink"
                android:textSize="25sp"
                android:layout_column="3"
                android:layout_row="4"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:onClick="onButtonClicked"
                />

            <Button
                android:id="@+id/equal_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="="
                android:textColor="@color/white"
                android:background="@color/black"
                android:textSize="25sp"
                android:layout_column="3"
                android:layout_row="5"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:onClick="onButtonClicked"
                />

        </LinearLayout>



</LinearLayout>






</LinearLayout>